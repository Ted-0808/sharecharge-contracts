{
  "name": "@shareandcharge/sharecharge-contracts",
  "version": "0.9.0",
  "description": "Share & Charge smart contracts",
  "directories": {
    "test": "test"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "solium -d contracts",
    "cover": "solidity-coverage",
    "test": "truffle test",
    "migrate": "truffle migrate",
    "ganache": "ganache-cli -m \"candy maple cake sugar pudding cream honey rich smooth crumble sweet treat\" --port 8544 --accounts 20 --network-id 9 --db=./ganache-db",
    "geth-dev": "geth --dev --datadir=../.chaindata --dev.period 1 --rpc --rpcaddr 0.0.0.0 --rpccorsdomain=* --rpcapi=eth,personal,net,debug,shh --ws --wsaddr 0.0.0.0 --wsorigins=* --wsapi=eth,personal,net,pubsub,shh",
    "parity-dev": "parity --config network/dev.toml",
    "publish-dev": "node bin/publish.js",
    "publish-test": "node bin/publish.js test",
    "publish-production": "node bin/publish.js production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shareandcharge/sharecharge-contracts.git"
  },
  "author": "Share & Charge foundation",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shareandcharge/sharecharge-contracts/issues"
  },
  "homepage": "https://github.com/shareandcharge/sharecharge-contracts#readme",
  "devDependencies": {
    "ganache-cli": "^6.2.3",
    "jest": "^23.6.0",
    "openzeppelin-solidity": "^2.0.0",
    "solium": "^1.1.7",
    "truffle": "^5.0.0-beta.2",
    "truffle-contract": "^4.0.0-beta.1"
  },
  "dependencies": {
    "bignumber.js": "^8.0.1",
    "mkdirp": "^0.5.1"
  }
}
