{
  "name": "@shareandcharge/sharecharge-contracts",
  "version": "0.10.5",
  "description": "Share & Charge smart contracts",
  "directories": {
    "test": "test"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "main.js",
  "files": ["*.json", "*.js", "lib/*"],
  "scripts": {
    "compile": "truffle compile",
    "test": "rm -Rf build && truffle test",
    "lint": "solium -d contracts",
    "cover": "solidity-coverage",
    "migrate": "truffle migrate",
    "ganache": "ganache-cli -m \"candy maple cake sugar pudding cream honey rich smooth crumble sweet treat\" --port 8544 --accounts 20 --networkId=9",
    "geth-dev": "geth --dev --networkid=9 --datadir=../.chaindata --dev.period 1 --rpc --rpcaddr 0.0.0.0 --rpccorsdomain=* --rpcapi=eth,personal,net,debug,shh --ws --wsaddr 0.0.0.0 --wsorigins=* --wsapi=eth,personal,net,pubsub,shh",
    "parity-dev": "parity --config $PROJECT/network/dev.toml",
    "publish-dev": "node bin/publish.js",
    "publish-test": "node bin/publish.js test",
    "publish-production": "node bin/publish.js production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shareandcharge/sharecharge-contracts.git"
  },
  "author": "Share & Charge foundation",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shareandcharge/sharecharge-contracts/issues"
  },
  "homepage": "https://github.com/shareandcharge/sharecharge-contracts#readme",
  "devDependencies": {
    "ganache-cli": "^6.2.5",
    "mkdirp": "^0.5.1",
    "openzeppelin-solidity": "^2.1.1",
    "solium": "^1.2.2",
    "truffle": "^5.0.1",
    "truffle-contract": "^4.0.1",
    "truffle-flattener": "^1.2.10"
  },
  "dependencies": {
    "bignumber.js": "^8.0.2",
    "ethers": "^4.0.20",
    "web3-utils": "^1.0.0-beta.37"
  }
}
