{
  "name": "sharecharge-contracts",
  "version": "0.0.1",
  "description": "Share & Charge smart contracts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "install": "cp contract.defs.test.json ~/.sharecharge/contract.defs.development.json",
    "lint": "solium -d contracts",
    "cover": "solidity-coverage",
    "test": "truffle test",
    "geth-dev": "geth --dev --datadir=../.chaindata --dev.period 1 --rpc --rpcaddr 0.0.0.0 --rpcapi=eth,personal,net,debug --ws --wsaddr 0.0.0.0 --wsorigins=* --wsapi=eth,personal,net,pubsub",
    "e2e": "node e2e/index.js",
    "deploy": "node deploy.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/motionwerkGmbH/sharecharge-contracts.git"
  },
  "author": "MotionWerk GmbH",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/motionwerkGmbH/sharecharge-contracts/issues"
  },
  "homepage": "https://github.com/motionwerkGmbH/sharecharge-contracts#readme",
  "devDependencies": {
    "solidity-coverage": "^0.4.11",
    "solium": "^1.1.5",
    "truffle": "^4.1.3",
    "web3": "^1.0.0-beta.30",
    "zeppelin-solidity": "1.7.0"
  }
}
